<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Food/Drink Image -->
    <ImageView
        android:id="@+id/foodDrinkImage"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:src="@drawable/foodmenu_1"
        android:contentDescription="Food or Drink Image"
        android:layout_marginEnd="8dp" />

    <!-- Food/Drink Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Name -->
        <TextView
            android:id="@+id/foodDrinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English Breakfast Set"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Price -->
        <TextView
            android:id="@+id/foodDrinkPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM19.90"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Quantity Selector -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Decrease Button -->
        <Button
            android:id="@+id/quantityDecrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/foodDrinkQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginHorizontal="8dp"
            android:gravity="center" />

        <!-- Increase Button -->
        <Button
            android:id="@+id/quantityIncrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+" />
    </LinearLayout>
</LinearLayout>
